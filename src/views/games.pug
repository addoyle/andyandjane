section#games.games.white
  .container
    .row
      .col-sm-12.text-center
        .heading.wow.animated.fadeInUp
          h3 Games
          p Win some fabulous prizes!
    .row
      each game in games
        .col-sm-6.col-md-4
          .event-block.wow.animated.fadeInUp(data-wow-delay='.6s', data-wow-duration='1s')
            .event-img
              img.img-responsive(src=imgpath + 'games/' + game.img, alt=game.name)
            .event-body
              h5 !{game.name.toUpperCase()}
              p !{game.desc}
              h5 PRIZE
              h6 &ldquo;!{game.prize.toUpperCase()}&rdquo;
              p !{game.prizeDescription}
              if game.href
                a.btn.default-btn(href=game.href, title=game.activity) !{game.activity}
  .modal.fade#photo(tabindex=-1, role='dialog')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal')
            span &times;
          h4 Take a photo of&hellip;
        .modal-body
          ul
            each item in scavenger
              li 
                label
                  input(type='checkbox')
                  span &nbsp;#{item}
