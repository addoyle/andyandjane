doctype html

include mixins.pug

html(lang='en')
	head
		include meta.pug
	body
		include preloader.pug
		
		//- Header
		include banner.pug
		include nav.pug
		
		//- Sections
		include couple.pug
		include story.pug
		+aside('rsvpLink', rsvpLink.img)
			span.rsvpLink-title= rsvpLink.desc
			a.btn.default-btn(href=rsvpLink.contactLink) RSVP
			a.btn.default-btn(href=rsvpLink.mapLink) MAP
		include people.pug
		include events.pug
		include gift.pug
		include gallery.pug
		include blog.pug
		+aside('quote', quote.img)
			blockquote
				p!= quote.quote
		include contact.pug
		include map.pug
		
		//- Footer
		include footer.pug

		//- Scripts
		// bower:js
		// endbower
		each script in scripts
			script(src=(script.indexOf('http') == 0 ? '' : '/assets/js/') + script)
