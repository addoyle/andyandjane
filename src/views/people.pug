mixin profile(person)
  .col-sm-8
    .profile
      h5= person.name.toUpperCase()
        small= person.role
      p= person.desc
mixin img(person)
  .col-sm-4
    .people-thumbnail-block
      .people-thumb-img
        img.img-responsive(src=imgpath + people[i].img)
    .thumbnail-detail
      ul.social-icon
        each social in person.socials
          li
            a(href=social.href)
              i.fa(class='fa-' + social.type)
mixin person(side, person)
  .col-sm-6(class=side + '-content')
    .row.wow.animated(class='fadeIn' + side.charAt(0).toUpperCase() + side.slice(1), data-wow-delay="0s", data-wow-duration="1s")
      if side == 'left'
        +profile(person)
        +img(person)
      else
        +img(person)
        +profile(person)


section#dining.people.lightsmoke
  .container
    .row
      .col-sm-12.text-center
        .heading.wow.animated.fadeInUp
          h3 Dining
          p Dining will be provided by Zeffert &amp; Gold Catering. Food will be served cocktail-style throughout the Conservatory, with themed selections for each of the Mediterranean, Desert, and Tropical sections. Beer, wine, and cocktails will be served until 10pm.
          p Red velvet and black bottom cupcakes will be provided by Flavor Cupcakery. 
          p
            a(href="http://zeffertandgold.com/", target="_blank", style="margin: 0 10px", title="Zeffert & Gold")
              img(src=imgpath + "zeffert_and_gold.png", style="height: 83px;")
            a(href="http://flavorcupcakery.com/", target="_blank", style="margin: 0 10px", title="Flavor Cupcakery")
              img(src=imgpath + "flavor_cupcakery.png", style="height: 83px;")
    - for (var i = 0; i < people.length; i += 2)
        .row
          +person('left', people[i])
          if people[i+1]
            +person('right', people[i+1])
